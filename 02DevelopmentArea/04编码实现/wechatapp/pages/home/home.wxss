.container {
    display:flex;
    flex-direction:column;
    width:100%;
    height:100%;
    font-size: 26rpx;
}

.header {
    width:100%;
    height:100rpx;
    flex:none;
    background-color: orange;
}

.search-input{
  border: 1px solid linen;
  background-color: white;
  height: 60rpx;
  flex-grow: 1;
  margin: 10px;
  border-radius: 3px;
}

.catagorys {
    overflow:hidden;
    white-space:nowrap;
    margin:20rpx;
    padding:20rpx;
}

.catagorys text{
     padding-right:20rpx; 
}

.foods {
    flex:1 1 auto;
    height:100%;
    width:100%;
    overflow-y:auto;
}

.food{
    display:flex;
    flex-direction:row;
    padding:10rpx;
}

.food_pic {
    height:150rpx;
    width:150rpx;
}

.food-info{
    display:flex;
    flex-direction:column;
    flex-grow:1;
}

.food-info-col{
    flex:1;
    padding-left: 20rpx;
}

.operation {
    display:flex;
    flex-direction:row;
    align-items: flex-start /* 内容垂直居中 */
}

.operation image{
    width:50rpx;
    height:50rpx; 
    align-self: center; /* 内容垂直居中 */
}


.footer{
    display: flex;
}

