.parent{  
    width:100%;  
    height:500px;  
    border:1px solid #222;  
    display:flex;/*设为伸缩容器*/  
    flex-flow:column;/*伸缩项目单行排列*/  
}  
.stable{  
    width:200px;/*固定宽度*/  
    border:1px solid  #ccc;  
    margin:20px;  
}  

.change{  
    flex:1;/*这里设置为占比1，填充满剩余空间*/  
    border:1px solid #ff4400;  
    margin:20px; 
    display: flex;
    
}  