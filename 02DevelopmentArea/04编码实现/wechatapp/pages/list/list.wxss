/* pages/list/list.wxss */
.page{
    overflow-y:hidden;
}

/* 左侧分类菜单样式 */
.list-left-menu{
    width:160rpx;
    font-size:28rpx;
    position: absolute;
    left:0px;
    z-index: 10;
}

/* 左侧分类菜单未选中的样式 */
.list-left-menu-box-unselect{
    padding:10rpx;
    border-bottom:1px solid #E3E3E3;
    height:72rpx;
    color: #6C6C6C;
    background:#F9F9F9;
}

/* 左侧分类菜单选中的样式 */
.list-left-menu-box-selected{
    padding:10rpx;
    height:72rpx;
    color: #FF9C35;
    border-left:3px solid #FF9C35;
    background:white;
}

/* 左侧菜单中文字样式 */
.list-menu-name{
  text-align: center;
  margin-top:14rpx;
}

/* 右侧每一类菜品头顶的分类说明的样式 */
.list-tab{
    margin-left:170rpx;
    font-size:25rpx;
    background:lightcoral;
    color:#CBCCCF;
    padding:2px
}

/* 右侧菜品图片的容器样式 */
.list-image-box{
    width:160rpx;
    height:72px;
    text-align: center;
}

/* 菜品图片的样式 */
.list-image{
    width:108rpx;
    margin-top:16rpx;
}

/* 菜品列表容器 */
.content-list{
    margin-left:160rpx;
    display:flex;
    border-bottom: 1px solid #E3E3E3;
}

/* 菜品详细信息 */
.issue-name{
    width:200px;
    font-size:30rpx;
    margin-top:20rpx;
}

.plus-icon{
    float:right;
    color:#FF9C35;
    font-size:46rpx;
}

.operate-bar{
    z-index: 1001; 
    position: absolute;
    bottom: 0px;
    height:55px;
    width:100%;
    display: flex;
}

/* 购物车容器样式 */
.gouwuche{
    width:75%;
    background:#353535;
    height: 100%; 
  
}

/* 购物车图标的样式*/
.gouwuche-icon{
    font-size:40px;
    color:#87888E;
    margin-left:10px;
    position: relative;
}

/* 购物车图标顶上的点菜数量样式 */
.number-msg{
  padding: 1px 7px;
  border-radius:50%;
  background:red;
  color:white;
  font-size:14px;
  position: absolute;
  text-align: center;
  top:0px;
  right:-5px;
}

/*购物车时空的字体设置*/
.gouwuche-price{
  color:#A9A9A9;
  display:flex;
  align-items: center;
  margin-left:10px;
  font-size:15px
}

/*选好了按钮设置*/
.submit-btn{
  height:100%;
  background:#F7F7F7;
  width:25%;
  display:flex;
}

/*选好了按钮字体设置*/
.submit-btn-label{
  color:#A9A9A9;
  font-size:15px;
  margin:auto;
}

/*点击+号后，弹出层后面的遮罩层的设置*/
.drawer_screen {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000;  
  opacity: 0.5;  
  overflow: hidden;  
}  

/* 点击+号弹出框设置*/  
.drawer_box_ad { 
  margin-left: 7%; 
  width: 86%; 
  overflow: hidden;  
  position: fixed;  
  top: 15%; 
  z-index: 1001;  
  background: #FFFFFF;  
  border-radius: 4px;
} 

/* 弹出框设置 */
.drawer_content_ad {  
  height: 289px;
  width: 100%;
  padding: 10px;
}

/* 弹出框中分类标签文字内容样式 */
.select-line-nav{
  font-size:12px;
  margin-left:5px;
  margin-top:10px;
  color:#ABABAB;
}

/* 购物车列表样式 */
.cartlist-float{  
  width: 100%; 
  overflow: hidden;  
  position: fixed;   
  z-index: 1001;
  bottom: 55px;
  max-height: 250px;  
} 

/* 弹出框中分类内容的样式 */
.select-tab{
  padding:5px 7px;
  border:1px solid #ABABAB;
  font-size:12px;
  border-radius:5px;
  margin:5px;
  color:#ABABAB;
  z-index:1002;
}

/* 弹出框中选中分类后的样式*/
.select-active{
  color:#FF9C35;
  border:1px solid #FF9C35;
}

/* 弹出框中价格的样式 */
.select-price{
  font-size:14px;
  color:#FF9C35;
  margin-top:20px;
  display:flex;
  align-items: center;
  margin-left:10px;
}

/* 弹出框中加入购物车按钮的样式*/
.btn-putIn{
  height:40px;
  width:100px;
  font-size:14px;
  background:#FF9C35;
  color:white;
  margin-right:20px;
}

/* 橘黄色 */
.activity-color{
  color:#FF9C35;
}

.color-white{
  color:white;
}

/* 点餐后，选好了的背景色 */
.activity-color-bg{
  background:#FF9C35;
}

/* 购物车列表中-已选商品字体的样式*/
.label-cart-bar{
  color:#878787;
  font-size:12px;
  border-left:4px solid #FF9C35;
  margin-left: 20px;
}

/*购物车列表中-清空购物车图标的样式 start */
.icon-clear{
    color:#878787;
    float: right;
    margin-right: 10px;
}
.label-clear{
    color:#878787;
    font-size: 12px;
}
/*购物车列表中-清空购物车图标的样式 end */

/* 购物车列表的样式 start*/
.cart-list-box{
  background:#FFFFFF;
  display:flex;
  font-size:13px;
}
.list-info{
  width:50%;
  padding:5px 15px;
}
.list-info-size{
  font-size:10px;
  color:#B1B1B1;
}
.icon-li-circle{
  margin-left:15px;
  font-size:20px
}
.font20{
  font-size:20px
}
.cart-scroll-list{
  height:450rpx;
}
/* 购物车列表的样式 end */

/* 优惠宣传条 */
.cut-bar{
  height:20px; 
  position: fixed;
  bottom:55px;
  background:#FFCD9B;
  width:100%;
  color:#FFF7EC;
  font-size:12px;
  text-align:center;
}